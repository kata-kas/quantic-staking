{{ include('dashboard/base.html.twig') }}

{% block body %}
	<!-- Create account -->
	<section>
		<div>
			<!-- STEP 1 -->
			{% if step == 1 %}
				<div class="row my-5">
					<div class="col-xl-4 col-lg-6 col-md-8 col-sm-12">
						<div class="row pb-3">
							<div class="col-lg-12 col-sm-8">
								<h1>Create Account</h1>
								<p class="py-4">Before you can access all the investment opportunities, you need to create a Quantic Staking account.</p>
							</div>
						</div>
						<div class="row pb-5">
							<div class="col-lg-6 col-lg-6 col-md-6 col-sm-6 col-xs-12 pb-3">
								<div class="step-icon hero-step center d-inline-flex me-3">1</div>
								<span class="text-secondary d-inline">Account Info</span>
							</div>
							<div class="col-lg-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="step-icon next-step center d-inline-flex me-3">2</div>
								<span class="info-purple">KYC</span>
							</div>
						</div>
						<div class="main-box mb-3">
							<div class="row">
								<div class="col-lg-12">
									<h2 class="pb-3">Account Info</h2>
									<p class="pb-3">All fields are mandatory</p>
									<input type="text" id="name" name="name" class="form-control form-box mb-3" placeholder="Name ..." required>
									<input type="text" id="surname" name="surname" class="form-control form-box mb-3" placeholder="Surname ..." required>
									<input type="email" id="email" name="email" class="form-control form-box mb-3" placeholder="E-mail Address ..." required>
									<input type="password" id="pass" name="password" class="form-control form-box mb-3" placeholder="Password ..." required>
									<input type="password" id="confpass" name="confpassword" class="form-control form-box mb-5" placeholder="Confirm Password ..." required>
									<input type="submit" id="next" value="Next" class="hero-gradient hero-btn w-100 mt-3">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 text-center">
								<a href="">Back To Login</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<!-- STEP 2 -->
				<div class="row my-5">
					<div class="col-lg-8">
						<div class="row pb-3">
							<div class="col-lg-6 col-sm-8">
								<h1>Create Account</h1>
								<p class="py-4">Before you can access all the investment opportunities, you need to create a Quantic Staking account.</p>
							</div>
						</div>
						<div class="row pb-5">
							<div class="col-lg-6 col-lg-6 col-md-6 col-sm-6 col-xs-12 pb-3">
								<div class="step-icon hero-step center d-inline-flex me-3">1</div>
								<span class="text-secondary d-inline">Account Info</span>
							</div>
							<div class="col-lg-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="step-icon hero-step center d-inline-flex me-3">2</div>
								<span class="text-secondary">KYC</span>
							</div>
						</div>
						<div class="main-box mb-3">
							<div class="row">
								<div class="col-lg-6">
									<h2 class="pb-3">Account Info</h2>
									<p class="pb-3">Basic details to use when logging in</p>
									<form>
										<input type="text" id="name" name="name" class="form-control form-box mb-3" placeholder="Name ..." required>
										<input type="text" id="surname" name="surname" class="form-control form-box mb-3" placeholder="Surname ..." required>
										<input type="email" id="email" name="email" class="form-control form-box mb-3" placeholder="E-mail Address ..." required>
										<input type="password" id="pass" name="password" class="form-control form-box mb-3" placeholder="Password ..." required>
										<input type="password" id="confpass" name="confpassword" class="form-control form-box mb-5" placeholder="Confirm Password ..." required>
									</form>
								</div>
								<div class="col-lg-6">
									<h2 class="pb-3">Know Your Customers</h2>
									<p class="pb-3">Getting to know you more</p>
									<form>
										<input type="address" id="address" name="address" class="form-control form-box mb-3" placeholder="Address ..." required>
										<div class="input-group pb-3">
											<input type="text" id="postcode" name="postcode" class="form-control form-box mb-3 me-3" placeholder="Postcode ..." required>
											<select id="country" name="country" class="form-control form-box mb-3">
												<option value="United Kingdom">United Kingdom</option>
												<option value="Afghanistan">Afghanistan</option>
											</select>
										</div>
										<h2 class="pb-2">Passport Photo</h2>
										<p class="fs-xs pb-2">Upload a recent photo of yourself, holding the passport in your hand where both your face and the passport is visible.</p>
										<input type="file" name="file" id="file" accept=".jpg,.jpeg,.png" class="upload-btn"/>
										<label for="file" class="w-50">Browse Files</label>
										<div class="form-check pt-4 pb-5">
											<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
											<label class="form-check-label ps-2 pt-1" for="flexRadioDefault1">I accept the
												<a href="">terms and conditions</a>
											</label>
										</div>
										<input type="submit" id="next" value="Create Account" class="hero-gradient hero-btn w-100 mt-3 me-2">
									</form>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 text-center">
								<a href="">Back To Login</a>
							</div>
						</div>
					</div>
				</div>
			{% endif %}


		</div>
	</section>
{% endblock %}
